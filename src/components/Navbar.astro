---
// import { info } from "@data";
import { createLogo } from "../utils/index";
import ThemeToggle from "./ThemeToggle.astro";

const navItems = [
  {
    name: "Inicio",
    href: "/#/",
  },
  {
    name: "Proyectos",
    href: "/#proyectos",
  },
  {
    name: "Tecnologias",
    href: "/#tecnologias",
  },
  {
    name: "Sobre mi",
    href: "/#sobre-mi",
  },
];
---

<header
  class="container sticky top-0 z-50 flex items-center justify-between h-[4rem] mx-auto bg-background/95 backdrop-blur"
>
  <a
    class="text-2xl dark:text-light font-semibold dark:font-semibold font-outfit"
    href="/"
    >{createLogo("Lucas Quiroga")}.
  </a>
  <nav>
    <ul class="flex items-center gap-4 justify-center mx-auto">
      {
        navItems.map((item) => (
          <li class="mx-auto">
            <a
              href={item.href}
              class="p-4 dark:text-light  text-lg hover:bg-slate-100 rounded-lg h-[3rem] text-center flex justify-center items-center mx-auto"
            >
              {item.name}
            </a>
          </li>
        ))
      }

      <ThemeToggle />
    </ul>
  </nav>
</header>

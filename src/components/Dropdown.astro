---
import { Dropdown as DropdownContainer, DropdownItems } from "astro-navbar";
import type { ChildProps } from "../types";
const { name, lastItem, children } = Astro.props;
---

<li class="relative">
  <DropdownContainer class="group">
    <button
      class="p-4 dark:text-light text-lg hover:bg-slate-100 rounded-lg h-[3rem] text-center flex justify-center items-center mx-auto dark:text-white dark:hover:text-black"
    >
      <span>{name}</span>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="3"
        stroke="currentColor"
        class="w-3 h-3 mt-0.5 group-open:rotate-180 ml-2"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
      </svg>
    </button>
    <DropdownItems>
      <div
        class:list={[
          "lg:absolute w-full z-10",
          lastItem
            ? "lg:right-0 origin-top-right"
            : "lg:left-0 origin-top-left",
        ]}
      >
        <div
          class="px-3 lg:py-2 lg:bg-white lg:rounded-md lg:shadow lg:border flex flex-col"
        >
          {
            children.map((item: ChildProps) => (
              <a
                href={item.path}
                class="py-1 text-gray-600 hover:text-gray-900 cursor-pointer"
              >
                {item.name}
              </a>
            ))
          }
        </div>
      </div>
    </DropdownItems>
  </DropdownContainer>
</li>

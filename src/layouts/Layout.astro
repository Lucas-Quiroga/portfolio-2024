---
import { ViewTransitions } from "astro:transitions";
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";
interface Props {
  title: string;
}
import "../styles/global.css";
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/dev1.png" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Lucas Quiroga - Desarrollador web especializado en el stack MERN de JavaScript. Habilidades en JavaScript, ReactJS, CSS, APIs, bases de datos no relacionales, Git, y más."
    />
    <meta
      name="keywords"
      content="JavaScript, ReactJS, CSS, APIs, MongoDB, Git, Programación Orientada a Objetos, SEO, Aprendizaje Continuo"
    />
    <meta name="author" content="Lucas Quiroga" />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="container mx-auto dark:bg-gray-950">
    <Nav />
    <main class="container">
      <slot />
    </main>
    <Footer />
  </body>
</html>

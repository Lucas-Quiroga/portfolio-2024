---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import Projects from "../components/Projects.astro";
import TechStack from "../components/TechStack.astro";
import AboutMe from "../components/AboutMe.astro";
import { ScrollUpButton } from "../components/ScrollUpButton";
import "../styles/global.css";
---

<Layout title="Lucas Quiroga">
  <main>
    <Hero />

    <div class="px-4 sm:py-14" id="proyectos">
      <Projects text="freelance" />
      <Projects text="personales" />
    </div>
    <div class="px-4 py-14" id="tecnologias">
      <TechStack />
    </div>
    <div class="px-4 pb-[3.5rem] sm:py-14" id="sobre-mi">
      <AboutMe />
    </div>
  </main>
  <ScrollUpButton client:load />
</Layout>
